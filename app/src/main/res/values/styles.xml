
<resources>

<!--base application theme-->
<style name="AppMaterialTheme" parent="SuperMaterialTheme">
    <!-- Customise your theme here -->

</style>

<style name="SuperMaterialTheme" parent="Theme.AppCompat">
    <!-- Parent theme for all Pre-Lollipop and Lollipop above versions i.e. For all devices. -->
    <item name="colorPrimary">#485c62</item>
    <item name="colorPrimaryDark">#36454a</item>
    <item name="colorAccent">#FF0CCDF4</item>

    <item name="colorControlHighlight">#0ded14</item>
    <item name="colorButtonNormal">#081f4d</item>
    <item name="colorControlActivated">#FF0CCDF4</item>
    <!--<item name="windowActionBar">false</item>-->

</style>
    <style name ="CoinListViewTheme" parent="Theme.AppCompat.NoActionBar">


        <item name="colorControlHighlight">#0ded14</item>
        <item name="colorButtonNormal">#081f4d</item>
        <item name="colorControlActivated">#FF0CCDF4</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <!--Switch Button Styling-->
    <style name="alertSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#0ff745</item>
        <item name="colorSwitchThumbNormal">#ffffff</item>
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
    <!-- Imported From Candlestick Project-->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
    </style>

    <!-- ListViews -->
    <style name="ReaderListView">
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawSelectorOnTop">true</item>

    </style>

    <style name="ReaderListView.PostList" parent="ReaderListView">
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:drawSelectorOnTop">false</item>
    </style>

    <style name="ReaderListView.EmptyList" parent="ReaderListView">
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>

    <style name="ReaderListView.PostList.Post" parent="ReaderListView.PostList">
        <item name="android:minHeight">60dip</item>
    </style>

    <style name="StocksTextView" parent="android:Widget.TextView">
        <item name="android:textColorLink">@color/reader_hyperlink</item>
    </style>

    <style name="StocksTextView.Post.Title" parent="StocksTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_extra_large</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="ReaderImageView" />

    <style name="ReaderImageView.ButtonIcon" parent="ReaderImageView">
        <item name="android:layout_width">@dimen/reader_button_icon_small</item>
        <item name="android:layout_height">@dimen/reader_button_icon_small</item>
    </style>


</resources>